{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "max-len": ["error", {
      "code": 120
    }],
    "react/jsx-filename-extension": [1, {
      "extensions": [".test.js", ".jsx", "js"]
    }],
    "arrow-parens": ["as-needed", {
      "requireForBlockBody": true
    }]
  }
}

